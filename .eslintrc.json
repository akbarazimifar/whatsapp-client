{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "global-require": "off",
        "import/no-dynamic-require": "off",
        "indent": ["error", 2],
        "linebreak-style": ["error", "windows"],
        "no-restricted-syntax": "off",
        "no-unused-vars": "warn",
        "quotes": ["error", "double"]
    }
}
